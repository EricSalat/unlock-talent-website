---
import Button from "../components/Button.astro";
import Collaborators from "../components/Collaborators.astro";
import OrdenadorHero from "../../src/icons/OrdenadorHero.astro";
---

<section id="hero">
    <div class="layout-hero">
        <div id="text-part">
            <h1>
                Unlock talent.<br> Unlock opportunity.
            </h1>
            <p>Checkr powers the fastest, fairest background checks for businesses of all sizes, it’s time to change the way you hire.</p>
            <div id="buttons-div">
                <Button
                    content="Run a background check"
                    width="260px"
                    >
                </Button>
                <Button
                    content="Contact sales"
                    width="160px"
                    backgroundColor="var(--rosaPrincipal)">
                </Button>
            </div>
            <div id="collaborators">
                <Collaborators image="logo-netflix" alt="Netflix" />
                <Collaborators image="logo-uber" alt="Uber" />
                <Collaborators image="logo-globant" alt="Globant" />
                <Collaborators image="logo-glovo" alt="Glovo" />
                <Collaborators image="logo-wallapop" alt="Wallapop" />
                <Collaborators image="logo-accenture" alt="Accenture" />
        
            </div>
        </div>
        <div id="image-part">
                <OrdenadorHero />
        </div>
    </div>

</section>

<style>


	section {
        background-color: #fff;
        padding: 50px 100px;
		display: block;
	}

    .layout-hero {
        margin: 0 auto;
        max-width: 1600px;
        display: flex;
    }

	#text-part {
		width: 50%;
		
	}

	#image-part {
        /* background-color: blueviolet; */
        width: 40%;
		overflow: visible; /* Permite que el contenido sobresalga del contenedor */
        position: relative;
        /* transform: translate(-10%); */
        /* background-color: aqua; */
        
	}
    
    svg {
    }

    #buttons-div {
        display:flex;
        gap: 32px;
        padding: 50px 0;
    }

    #collaborators {
        width: auto;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 10px;
        width: fit-content;
        /* align-items: stretch; */
    }

    svg {
            position: absolute; /* Posiciona la imagen dentro del contenedor */
            top: 0px; /* Ajusta la posición vertical de la imagen */
            left: 0%; /* Ajusta la posición horizontal de la imagen */
            /* transform: translateX(0%); */
            /* border: 2px solid red; */
    }

    @media (width < 1000px) {
        .layout-hero {
            flex-direction: column;
        }

        #image-part {
        /* background-color: blueviolet; */
        width: auto;
		overflow: hidden; 
        position: static; /* Importante para posicionar la imagen */

	}

        svg {
            position: static;
            /*Ajustarlo para que sea la imagen dentro de un div.*/
        }
    }
    @media (width < 550px) { 
        section {
                padding: 10px 20px;
                flex-direction: column-reverse;  
        }

        #text-part, #image-part{
                width: 100%;
                align-items: center;
                position: relative;
        }

        #collaborators {
            /* background-color: blueviolet; */
            grid-template-columns: 1fr 1fr;
            place-items: center;
            width: 100%;
            padding-bottom: 40px;
            
        }

        
    }
</style>