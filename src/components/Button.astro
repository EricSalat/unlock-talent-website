---
const {content, width, backgroundColor, fontWeight} = Astro.props;
---

<button style={{ 
    width: width || 'auto',
    backgroundColor: backgroundColor || 'var(--verdePrincipal)',
    fontWeight: fontWeight || 'bold'
}}>
    {content}
</button>

<style >
    button {
        color: #000;
        height: 45px;
        padding: 0 20px;
        font-size: 14px;
        border: solid 1px #000;
        filter: drop-shadow(5px 5px 0px #000000);
        transition: filter 0.3s ease;
    }

    button:hover {
        filter: drop-shadow(0px 0px 0px #000000);
    }
</style>