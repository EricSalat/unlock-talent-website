---
const { image, alt } = Astro.props
---

<div>
    <img src=`/img/logos/${image}.png` alt={alt}>
</div>

<style>
    div {
        background-color: var(--azulContenedorBorde);
        width: 150px;
        height: 61px;
        border: 2px solid var(--azulContenedor);
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;   
    }

    img {
        max-width: 100%;
        max-height: 100%;
        padding: 0 20px;
    }

    @media (width < 500px) { 
        div {
            width: 170px;   
        }
        img {
        padding: 0 40px;
    }

        
    }


   
</style>