---
import Button from "./Button.astro";

const { header, body, content, color, backgroundColor } = Astro.props;
---

<div class="accordion">
  <div class="accordion-item">
    <div
      class="accordion-header"
      style={{ 
        backgroundColor: backgroundColor || "#000",
    }}
    >
      <p style={{ 
        color: color || "#fff",
    }}>{header}</p>
    </div>
    <div class="accordion-content">
      <p>{body}</p>
      <div>
        <Button content={content} />
     </div>
    </div>
  </div>
</div>

<style>

  .accordion {
    border: 2px solid #000;
    border-radius: 10px;
    margin-bottom: 20px;
    overflow: hidden;
    width: 100%;
}


.accordion-header {
    font-weight: 700;
    letter-spacing: 3px;
    background-color: #f4f4f4;
    padding: 15px 10px;
    cursor: pointer;
    /* width:max-content; */
    background-color: blue;
  }

  .accordion-content {
    color: #000;
    padding: 20px;
    display: none;
    background-color: #fff;
    /* display: flex; */
  }

  .accordion-content p {
    padding-bottom: 20px;
  }

  /* Estilos para mostrar el contenido activo */
  .accordion-item.active .accordion-content {
    display: block;
  }
</style>
