---
import Accordion from "./Accordion.astro";
import AccordionTest from "./AccordionTest.astro";
---

<section>
    <div class="layout">
        <div class="text">
            <h2>It's easy to integrate with Checkr</h2>
            <p>Plug Checkr right into your hiring workflow</p>
            <AccordionTest />
        </div>
        <div class="image">
                <img src="/img/laptop.png"/>
        </div>
    </div>
    
</section>

<style>
    section {
        padding: 50px 100px;
        background-color: var(--verdePrincipal);
        display: flex;
        flex-direction: row;
        border: solid 3px #000;
        border-top: none;

    }

    p {
        padding-bottom: 50px;
    }
    
    .image{
        width: 60%;
        display: flex;
        justify-content: center; 
        align-items: center;
        /* height: fit-content; */
    }
    .text{
        width: 50%;
        display: flex;
        flex-direction: column;
        height: fit-content;
        align-items: left;
        justify-content: center;
        padding-bottom: 50px;
    }

    .layout {
        gap: 50px;
    }
    

    @media (width < 700px) { 
        section {
                padding: 10px 20px;
                flex-direction: column; 
                border-right: none;
                border-left: none; 
        }


        div.image, div.text{
                width: 100%;
                align-items: center;
        }

        .layout {
            flex-direction: column;    
        }

    }
</style>