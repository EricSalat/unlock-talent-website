---
import '@fontsource-variable/space-grotesk';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--mainFont: 'Space Grotesk Variable', sans-serif;
		--verdePrincipal: #62C0A5;
		--verdeAcento: #7cc9b3;
		--rosaPrincipal: #f8bed4;
		--rosaAcento: #f9cadc;
		--azulPrincipal: #b7e4e8;
		--azulAcento: #bde6e9;
		--azulContenedor: #CFEFF1;
		--azulContenedorBorde: #E0F4F6;
		
	}
	p {
		color: #000;
		font-size:20px;
	}

	h1 {color: #000;}
	
</style>
